@page "/"
@using Microsoft.AspNetCore.Components.Forms
<div id="contact_div">
    <h1>Contact Us Form</h1>
    <EditForm Model="@ContactMessage" OnValidSubmit="@SubmitContactMessage">
        <DataAnnotationsValidator/>
        <div class="input_section">
            <label for="firstname">First Name</label>
            <InputText type="text" id="firstName" @bind-Value="ContactMessage.FirstName" />
            <ValidationMessage class="validation_message" For="@(() => ContactMessage.FirstName)"/>
        </div>
        <div class ="input_section">
            <label for="lastname">Last Name</label>
            <InputText type="text" id="lastname" @bind-Value="ContactMessage.LastName" />
            <ValidationMessage class="validation_message" For="@(() => ContactMessage.LastName)" />
        </div>
        <div class="input_section">
            <label for="email">Email</label>
            <InputText type="email" id="email" @bind-Value="ContactMessage.Email" />
            <ValidationMessage class="validation_message" For="@(() => ContactMessage.Email)"/>
        </div>
        <div class="input_section">
            <label for="message">Message</label>
            <InputTextArea id="message" @bind-Value="ContactMessage.Message" />
            <ValidationMessage class="validation_message" For="@(() => ContactMessage.Message)" />
        </div>
        <div id="button_div" class="input_section">
            <button type="submit">SUBMIT</button>
        </div>
    </EditForm>
    <h3>@Message</h3>
</div>

<style>
    h1 {
        font-size: 38px;
        font-family: Arial;
        font-weight: bold;
        color: #4A4A4A;
        padding: 4px 4px 4px 0px;
        width: 100%;
    }
    
    h3 {
        font-size: 16px;
        font-family: Arial;
        font-weight: bold;
        color: #4A4A4A;
        padding: 4px;
        width: 100%;
        text-align: center;
    }

    label {

    }

    label {
        font-weight: bold;
        font-size: 16px;
        font-family: Arial;
        display: inline-block;
        padding:20px 0px 6px 0px;
        color: #4A4A4A;
    }

    input, textarea {
        font-size: 16px;
        color: #4A4A4A;
        font-family: Arial;
        width: 100%;
        box-sizing: border-box;
        border-width: 2px;
        border-color: #0087AA;
        border-style: solid;
        display: inline-block;
    }

    input {
        padding:6px 0px 6px 0px;
    }

    textarea {
        height:120px;
        resize: none;
    }

    button {
        font-size: 16px;
        font-family: Arial;
        background: #0087AA;
        height: 36px;
        border: none;
        color: #FFFFFF;
        width: 100%;
        padding: 8px;
    }

    button:hover {
        background: #1997B7;
    }

    .form-item {
        padding-top: 4px;
    }

    .input_section {
        width: 100%;
    }

    .validation_message {
        color: red;
